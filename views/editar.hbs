{{#unless error}}

  <main class="container">
    <div class="bg-light p-5 rounded mt-3">
      <h1>Editar</h1>

      <form action="/update" method="post">
        <div class="row mt-4">
          <div class="col-md-5">
            <label for="nome" class="form-label">Nome Completo</label>
            <input type="hidden" value="{{id}}" name="id" />
            <input
              value={{nome}}
              type="text"
              class="form-control"
              id="nome"
              name="nome"
              placeholder="Digite seu nome"
              required
            />
          </div>

          <div class="col-md-5">
            <label for="exampleFormControlInput1" class="form-label">Endereço de
              Email</label>
            <input
              value={{email}}
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="digite seu email"
              required
            />
          </div>

          <div class="col-md-2">
            <button class="mt-3 p-3 w-100 btn btn-warning">Salvar alterações</button>
          </div>
        </div>
      </form>

    </div>
  </main>
{{else}}
  <div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
      Houve um Problema:
      {{problema}}</div>
  </div>
{{/unless}}